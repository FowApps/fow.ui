{
    "extends": "@4c/tsconfig/web.json",
    "compilerOptions": {
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib/esm",
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": ["./node-modules/@types/", "./src/index.ts"],
        "types": ["jest", "node", "@types/jest"]
    },
    "include": ["src"],
    "exclude": ["**/*.stories.tsx", "**/*.test.ts"]
}
